extends ../layouts/default

block content
	//- Top Header Section
	.container.no-padding
		img(src="../images/tga_header_medium.png", alt="The Great Academy").img-responsive.visible-sm.visible-xs
		img(src='/images/stretch-bg.png').center-block.col-sm-height.img-responsive.visible-md.visible-lg

	//- Main Intro Section
	.container.no-padding
		.jumbotron.index-bg
			.row
				h1.hero__heading.animated.fadeInUp.delay_20.visible-xs.text-center Ask The Principal
			.row
				.row-same-height
					.col-sm-6.col-lg-4
						img(src='/images/Jasper and Keisha.JPG').center-block.img-responsive
					.col-sm-6.col-lg-8.text-center
						.col-middle.text-center
							h1.animated.fadeInUp.delay_20.hidden-xs Ask The Principal
							hr
							//- .row
							//- 	.owl-wrapper
							//- 		.col-xs-8.btn-block
