						.row
							.col-xs-4.col-sm-2.col-xs-offset-4.col-sm-offset-5
								a(href="/contact")
									img(src="/images/Question-mark-icon.png", alt='Question Mark', data-toggle='tooltip', data-placement='bottom', title='SUBMIT A QUESTION').img-responsive
								br
	.container
		.row
			.col-xs-12
				#myCarousel.carousel.slide(data-ride='carousel')
					//- Title
					h3.heading__sub.animated.fadeInUp.delay_40
						strong Sponsored by
					// Indicators
					//- ol.carousel-indicators
					//- 	li.active(data-target='#myCarousel', data-slide-to='0')
					//- 	li(data-target='#myCarousel', data-slide-to='1')
					//- 	li(data-target='#myCarousel', data-slide-to='2')
					// Wrapper for slides
					.carousel-inner(role='listbox')
						.item.active
							img(src="/images/tga_logo_footer.png", alt="The Great Academy Seal")
							h3.text-center
								| The Great Academy Foundation
						.item
							img(src="/images/770-kkob-noborder-sm.png", alt="770 KKOB-AM")
							h3.text-center
								| 770 KKOB-AM Radio New Mexico
						.item
							img(src="/images/logo-placeholder.png", alt="Your Company Here")
							h3.text-center
								| Your Business or Organization Here
					// Controls
					a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
						span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
						span.sr-only Previous
					a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
						span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
						span.sr-only Next
	//- Hero Divider Section 
	.hero.hero_agency
		.container
			.row
				.col-xs-10.col-xs-offset-1
					// Hero heading
					h1.heading.hero__heading.animated.fadeInUp.delay_20 Ask The Principal
					br
					// Hero subheading
					h4.heading__sub.hero-heading__sub.animated.fadeInUp.delay_40
						| Ask The Principal is a radio show dedicated to discussing important topics in Education.
						br
						br
